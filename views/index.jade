extends layout

block content
  main(class='container')
    h1 EWS Generator
    form(action='upload' method='post' enctype='multipart/form-data')
      div(class='form-group')
        label(for='username') RCS ID
        div(class='input-group')
          input(id='username' class='form-control' type='text' name='username' placeholder='RCS ID' required)
          span(class="input-group-addon" id="basic-addon2") @rpi.edu
      div(class='form-group')
        label(for='password') Password
        input(id='password' class='form-control' type='password' name='password' placeholder='Password' required)
        small(class='form-text text-muted') Your password is never stored on the server
      hr
      div(class='form-group')
        label(for='file-upload') EWS XLSX File
        input(id='file-upload' class='form-control-file' type='file' name='ews' required)
        small(class='form-text text-muted') No EWS data is stored on this server
      hr
      div(class='form-group')
        label(for='preferred-name') Preffered Name
        input(id='preferred-name' class='form-control' type='text' name='name' placeholder='Preferred Name' required)
      div(class='form-group')
        label(for='email-content') Email Contents
        textarea(id='email-content' class='form-control' rows=6 name='emailContent')
      div(class='form-group')
        label(for='hall-subsection') Hall Subsection
        select(id='hall-subsection' class='form-control' name='hallSubsection')
          option None
          option Barton A
          option Barton B
      hr
      div
        h3 Email Preview
        div(class='jumbotron')
          p 
            | Hello 
            em Student Name
            |, 
          p(id='email-body')
          p
            | Best,
            br
            | LA 
            span(id='la-name') Name
      button(type='submit' class='btn btn-primary') Submit
  script(src='javascripts/data-binding.js')
